<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.notice">

	<!--  select 요소: select 쿼리문 실행
		id속성: unique해야한다, 각 쿼리문의 요소를 구분하기 위함
		 -->
	<!-- 전체 게시글 수 조회 -->	 
	<select id="totalcnt" resultType="java.lang.Integer">
		<![CDATA[
			select count(*)
			from notice
		]]>
	</select>
	
	<!-- 공지사항 글 전체 리스트 -->
	<select id="noticeList" resultType="noticeDTO" parameterType="com.damoye.secondproject.model.Criteria">
		<![CDATA[
			select *
			from notice
			order by no desc 
			limit #{skip},#{amount}
		]]>
	</select>
	
	<!-- 메인 페이지 공지사항 글 리스트 -->
	<select id="mainNoticeList" resultType="noticeDTO">
		<![CDATA[
			select *
			from notice
			order by no asc 
			limit 0,3
		]]>
	</select>
	
	<!-- 공지사항 글작성 -->
	<select id="noticeInsert" resultType="noticeDTO" parameterType="noticeDTO">
		<![CDATA[
			insert into notice(writername, title, content)
			values(#{writername},#{title},#{content})	
		]]>
	</select>
	
	<!-- 공지사항 글 상세보기 -->
	<select id="getDetailNotice" resultType="noticeDTO" parameterType="java.lang.Integer">
		<![CDATA[
			select *
			from notice
			where no = #{no}
		]]>
	</select>
	
	<!-- 공지사항 글 수정 -->
	<select id="updateNotice" resultType="java.lang.Integer" parameterType="noticeDTO">
		<![CDATA[
			update notice
			set title=#{title}, content=#{content}, modidate=now()
			where no = #{no}
		]]>
	</select>
	
	<!-- 공지사항 글 삭제 -->
	<select id="deleteNotice" parameterType="java.lang.Integer">
		<![CDATA[
			delete 
			from notice
			where no=#{no}
		]]>
	</select>
	
	<!-- 조회수증가 -->
	<update id="updateReadCount" parameterType="java.lang.Integer">
	 	<![CDATA[
			update notice
			set readcnt = readcnt + 1
			where no = #{no}
		]]>
	</update> 
	
	<!-- 유저 전체 리스트 -->
	<select id="userAllList" resultType="com.damoye.secondproject.model.User">
		<![CDATA[
			select *
			from user
		]]>
	</select>
</mapper>